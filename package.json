    "wait-on": "^8.0.4"
  },

  "_comment_Environment": "--- СЕКЦИЯ 6: ОГРАНИЧЕНИЯ СРЕДЫ ---",

  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "os": [ "win32", "darwin", "linux" ],

  "_comment_ElectronBuilder": "--- СЕКЦИЯ 7: КОНФИГУРАЦИЯ СБОРКИ (ELECTRON-BUILDER) ---",

  "build": {
    "_comment": "--- Общие параметры для всех ОС ---",
    "appId": "com.unisound.app",
    "productName": "Unisound",
    "copyright": "Copyright © 2025 ${author}",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "compression": "maximum",
    "publish": {
      "provider": "github",
      "owner": "iamvany30",
      "repo": "unisound-desktop"
    },
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "fileAssociations": [
      {
        "ext": ["mp3", "flac", "ogg", "wav", "m4a"],
        "name": "Music File",
        "description": "Open with Unisound",
        "role": "Viewer",
        "icon": "assets/file-icon.ico"
      }
    ],
    "protocols": {
      "name": "Unisound Protocol",
      "schemes": ["unisound"]
    },

    "_comment": "--- Конфигурация для Windows ---",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "publisherName": "Unisound",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "installerIcon": "assets/installerIcon.ico",
      "uninstallerIcon": "assets/uninstallerIcon.ico",
      "license": "assets/license.txt"
    },

    "_comment": "--- Конфигурация для macOS ---",
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.music",
      "darkModeSupport": true,
      "minimumSystemVersion": "10.15.0"
    },

    "_comment": "--- Конфигурация для Linux ---",
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "icon": "assets/icon.png",
      "category": "AudioVideo;Audio",
      "description": "Desktop music application built with React and Electron.",
      "desktop": {
        "Name": "Unisound",
        "GenericName": "Music Player",
        "Comment": "Play your favorite music from local files or online sources.",
        "MimeType": "audio/mpeg;audio/wav;audio/ogg;audio/flac;audio/mp4;"
      }
    }
  },
  
  "_comment_OtherConfigs": "--- СЕКЦИЯ 8: ПРОЧИЕ КОНФИГУРАЦИИ ---",

  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}