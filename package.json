{
  "_comment_Identifier": "--- СЕКЦИЯ 1: ИДЕНТИФИКАЦИЯ ПРОЕКТА ---",

  "name": "unisound-react",
  "version": "0.1.7",
  "private": true,
  "description": "A cross-platform desktop music player built with React and Electron. Stream music from online sources or play your local files with a modern, dynamic interface.",
  "keywords": [
    "music",
    "player",
    "desktop",
    "electron",
    "react",
    "audio",
    "streaming",
    "unisound",
    "music-player",
    "cross-platform",
    "tailwindcss"
  ],

  "_comment_PeopleAndLinks": "--- СЕКЦИЯ 2: ЛЮДИ И ССЫЛКИ ---",

  "author": {
    "name": "iamvany20",
    "email": "iamvany@vk.com",
    "url": "https://github.com/iamvany30"
  },
  "contributors": [],
