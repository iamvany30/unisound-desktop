  "_comment_TechnicalInfo": "--- СЕКЦИЯ 3: ТЕХНИЧЕСКАЯ ИНФОРМАЦИЯ ---",

  "main": "build/electron.js",
  "files": [
    "build/**/*"
  ],

  "_comment_Scripts": "--- СЕКЦИЯ 4: СКРИПТЫ ---",

  "scripts": {
    "_comment": "Запуск React-приложения в режиме разработки.",
    "start": "react-scripts start",

    "_comment": "Запуск Electron-обертки после того, как React-сервер запустится на порту 3000.",
    "dev": "concurrently \"npm:start\" \"wait-on http://localhost:3000 && electron .\"",

    "_comment": "Полная очистка сборочных директорий.",
    "clean": "rimraf dist build",

    "_comment": "Сборка React-части проекта для продакшена.",
    "build:react": "react-scripts build",

    "_comment": "Копирование файлов Electron в сборочную директорию.",
    "copy:electron": "copyfiles -u 1 electron/**/* build",

    "_comment": "Полный цикл сборки приложения для текущей ОС.",
    "dist": "npm run clean && npm run build:react && npm run copy:electron && electron-builder",
    
    "_comment": "Сборка и немедленная публикация релиза на GitHub.",
    "release": "npm run dist -- --publish always",

    "_comment": "Скрипт для генерации иконок разных размеров.",
    "icons": "python create_icons.py src/assets/logo.png assets",
    
    "_comment": "Автоматическая пересборка нативных зависимостей для Electron после установки пакетов.",
    "postinstall": "electron-builder install-app-deps"
  },

  "_comment_Dependencies": "--- СЕКЦИЯ 5: ЗАВИСИМОСТИ ---",

  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "color-thief-react": "^1.0.2",
    "electron-log": "^5.4.3",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "hls.js": "^1.6.11",
    "i18next": "^25.4.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-device-detect": "^2.2.3",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.7.2",
    "react-parallax-tilt": "^1.7.307",
    "react-router-dom": "^6.30.1",
    "react-scripts": "^5.0.1",
    "typescript": "^5.9.2",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "copyfiles": "^2.4.1",
    "electron": "^38.1.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.5.6",
